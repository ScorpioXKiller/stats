import fs from 'fs';
import MatchData from './MatchData';
import MatchResult from './MatchResult';
import { dateStringToDate } from './utils/utils';

class CsvFileReader {
  constructor(public filePath: string) {}

  public getData(): MatchData[] {
    return fs
      .readFileSync(this.filePath, {
        encoding: 'utf-8',
      })
      .split('\n')
      .map((row: string): string[] => row.split(','))
      .map(
        (column: string[]): MatchData => [
          dateStringToDate(column[0]),
          column[1],
          column[2],
          parseInt(column[3]),
          parseInt(column[4]),
          column[5] as MatchResult,
          column[6],
        ]
      ); // parcing;
  }
}

export default CsvFileReader;